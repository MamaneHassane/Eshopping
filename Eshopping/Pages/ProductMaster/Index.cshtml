@page
@model Eshopping.Pages.ProductMaster.IndexModel
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Catalog</title>
    <link rel="stylesheet" href="~/css/ProductIndex.css" />
    <script src="https://kit.fontawesome.com/122dc9e5c9.js" crossorigin="anonymous"></script>
</head>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<form>
     <p>
            Title: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
     </p>
</form>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div class="product-grid">
    @foreach (var item in Model.Product) {
        <div class="product">
            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt=@Html.DisplayFor(modelItem => item.Name)>
            <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
            <p class="price">@Html.DisplayFor(modelItem => item.Price)</p>
            <p class="description">@Html.DisplayFor(modelItem => item.Description)</p>
            <div class="buttons">
                <button class="wishlist"><i class="fa-solid fa-cart-plus"></i></button>
                <button class="cart"><i class="fa-solid fa-cart-shopping"></i></button>
                <button class="buy"><i class="fa-solid fa-check"></i></button>
            </div>
            <div class="actions">
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>
